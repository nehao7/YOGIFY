<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YOGIFY" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.YOGIFY" parent="Base.Theme.YOGIFY" />

    <style name="checkbox_button" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">30dp</item>
        <item name="android:background">@drawable/on_btn_click</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="btn" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/on_btn_click</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="backgroundTint">@color/lightGreen</item>
        <item name="android:textStyle">bold</item>

    </style><style name="circular_radio_button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/on_btn_click</item>
        <item name="android:button">@android:color/transparent</item>


    </style>

   <!-- color -->
    <style name="ScreenBackground">
        <item name="android:background">@color/lightGrey</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/lightGreen</item>
    </style>

    <style name="descriptionColor">
        <item name="android:textColor">@color/lightGreen</item>
    </style>

    <style name="link">
        <item name="android:textColor">@color/lightGreen</item>
    </style>

    <style name="button">
        <item name="android:backgroundTint">@color/lightGreen</item>
    </style>

    <style name="textInputEditBackground" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/lightGreen</item>
        <item name="hintTextColor">@color/lightGreen</item>
    </style>
</resources>